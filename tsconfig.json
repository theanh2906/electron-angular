{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": [
        "./src"
    ]
}